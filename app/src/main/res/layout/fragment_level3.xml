<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange"
    tools:context=".ui.level3.Level3Fragment">

    <ImageView
        android:id="@+id/imageView26"
        android:layout_width="170dp"
        android:layout_height="70dp"
        android:layout_marginTop="55dp"
        android:outlineProvider="bounds"
        android:src="@drawable/icon_front_button"
        android:translationZ="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView79"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LEVEL 3"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        android:translationZ="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView26"

        app:layout_constraintEnd_toEndOf="@+id/imageView26"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/imageView26"
        app:layout_constraintStart_toStartOf="@+id/imageView26"
        app:layout_constraintTop_toTopOf="@+id/imageView26" />

    <ImageView
        android:id="@+id/pyramidLevel3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toTopOf="@+id/whiteLine3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/icon_pyramid_level_3" />

    <ImageView
        android:id="@+id/btn1Level3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="81dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/whiteLine3"
        android:src="@drawable/icon_first_button_level_3" />

    <ImageView
        android:id="@+id/whiteLine3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="273dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_white_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView26" />

    <ImageView
        android:id="@+id/btn2Level3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="81dp"
        android:layout_marginEnd="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/whiteLine3"
        android:src="@drawable/icon_second_button_level_3" />

    <ImageView
        android:id="@+id/btn4Level3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn2Level3"
        android:src="@drawable/icon_fourth_button_level_3" />

    <ImageView
        android:id="@+id/btn3Level3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        app:layout_constraintStart_toStartOf="@+id/btn1Level3"
        app:layout_constraintTop_toBottomOf="@+id/btn1Level3"
        android:src="@drawable/icon_third_button_level_3" />

    <TextView
        android:id="@+id/textView61"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:text="@string/_1"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn1Level3"
        app:layout_constraintEnd_toEndOf="@+id/btn1Level3"
        app:layout_constraintStart_toStartOf="@+id/btn1Level3" />

    <TextView
        android:id="@+id/textView62"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:text="@string/_2"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn1Level3"
        app:layout_constraintEnd_toEndOf="@+id/btn2Level3"
        app:layout_constraintStart_toStartOf="@+id/btn2Level3" />

    <TextView
        android:id="@+id/textView63"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="@string/_4"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/btn2Level3"
        app:layout_constraintStart_toStartOf="@+id/btn2Level3"
        app:layout_constraintTop_toBottomOf="@+id/btn4Level3" />

    <TextView
        android:id="@+id/textView64"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="@string/_3"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/btn3Level3"
        app:layout_constraintStart_toStartOf="@+id/btn3Level3"
        app:layout_constraintTop_toBottomOf="@+id/btn4Level3" />
</androidx.constraintlayout.widget.ConstraintLayout>